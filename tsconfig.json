{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/(wellness-lounge)/create-wellness-lounge/page.tsx", "app/(wellness-lounge)/categories-list/page.jsx", "app/(wellness-lounge)/alumni-registration/page.jsx", "app/(wellness-lounge)/student-registration/page.jsx", "components/ui/student-registration-form.jsx", "components/ui/registration-form.jsx"],
  "exclude": ["node_modules"]
}
